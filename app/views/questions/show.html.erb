<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<h1><%= @question.title %></h1>

<h4>Description: <%= @question.description %></h4>

<%= link_to "Edit Question", edit_question_path(@question) %>

<%= link_to "Delete Question", question_path, method: :delete %>

<h2>Answers:</h2>
<ul>
  <% if @answers %>
    <% @answers.each do |answer| %>
      <li><%= answer.description %></li>
    <% end %>
  <% end %>
</ul>

<%= form_for @answer, url: answers_path, html: { class: "new_answer", id: "new_answer" } do |f| %>
  <%= f.hidden_field :question_id, :value => @question.id %>

  <div class="field">
    <%= f.label :description, "Answer:" %><br />
    <%= f.text_area :description %>
  </div>

  <div class="actions">
    <%= f.submit "Answer Question"%>
  </div>
<% end %>
