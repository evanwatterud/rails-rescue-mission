<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<%= form_for @question, url: question_path, html: { method: "patch", class: "edit_question", id: "edit_question" } do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, value: @question.title %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, value: @question.description %>
  </div>

  <div class="actions">
    <%= f.submit "Edit Question" %>
  </div>
<% end %>

<%= link_to "Delete Question", question_path, method: :delete %>
